<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset4">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <p><%= f.submit "生成", class: "btn btn-small btn-primary" %></p>
    <% end %>
  </div>
</div>