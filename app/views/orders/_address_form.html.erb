<font size="1">配送情報登録しますか？</font>

<%= form_for(@address) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.hidden_field :user_id %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.submit "ok", class: "btn btn-small" %>
<% end %>
